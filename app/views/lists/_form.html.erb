<% if @list.errors.any? %>
    <%= pluralize(@list.errors.count, "error") %>
    <% @list.errors.full_messages.each do |err| %>
        <div> 
            <%= err %>
        </div>
    <% end %>
<% end %>

<div class="container list-form" >
<%= form_for @list do |f| %>
    <div>
        <%= f.label :address %>
        <%= f.text_field :address %>
    </div>

    <div>
        <%= f.label :pickUpDate %>
        <%= f.date_field :pickUpDate %>
    </div>

    <div>
        <%= f.label :timeslot %>
        <%= f.time_field :timeslot  %>
    </div>

    <div>
        <%= f.label :remarks %>
        <%= f.text_field :remarks %>
    </div>

    <hr>
    <h3>Items</h3>

    <button class="btn btn-outline-secondary mb-3" id="addItemToList"> Add new item</button>

    <% if @list.types.length != 0 %>
    <%# If this is an edit list %>
        <% @list.types.each do |type| %>
            <%= content_tag :div, class: "TypesContainer", data: { types: type } do %>
            <% end %>
        <% end %>
    <% else %>
        <div class="TypesContainer"></div>
    <% end %>

    <div id="submitBtn"><%= f.submit class: 'btn btn-outline-success'%></div>

    <%= javascript_pack_tag 'addTypeToList' %>
<% end %>
</div>