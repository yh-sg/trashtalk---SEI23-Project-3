<div class="text-center mt-4 container" style="height:80vh;">
    <h2>Welcome Back</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mt-4 field form-group col-lg-6 mx-auto">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" , :class => 'form-control'%>
      </div>

      <div class="field form-group col-lg-6 mx-auto">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" , :class => 'form-control'%>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field col-sm-3 text-center mx-auto">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-3 mb-4">
        <%= f.submit "Log in" , :class => 'button-login'%>
      </div>
    <% end %>
  <%= render "devise/shared/links" %>
</div>